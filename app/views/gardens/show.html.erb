<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>



<div class="container">
  <div class="row mt-4">


      <% @garden.plants.each do |plant| %>
        <div class="col-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.img_url %>)">
            <%= plant.name %>
            <%= link_to plant_path(plant), method: :delete, data: {confirm: "are you sure ?"} do %>

              <i class="fas fa-fire destroy-plant"></i>
            <% end %>
          </div>
        </div>
      <% end %>



  </div>

  <div class="d-flex row justify-content-center mt-4">
    <div class="col-6">
      <h2>Add a plant</h2>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :img_url %>
        <%= f.submit class:"btn btn-primary mt-2" %>
      <% end %>
    </div>
  </div>

</div>
